# OpenRouter API for metadata fetching and grammar explanation
OPENROUTER_API_KEY=your_key_here

# Backend Configuration
BACKEND_PORT=3847

# Frontend Configuration (for CORS)
FRONTEND_PORT=5847

# Inference Service Configuration
INFERENCE_PORT=8847
INFERENCE_SERVICE_URL=http://localhost:8847

# OCR Processing Configuration
OCR_CONCURRENCY=4
OCR_MAX_CONCURRENCY=16

# Database
DATABASE_URL="file:./dev.db"

# Server Configuration
NODE_ENV=development

# Chat model
CHAT_MODEL=anthropic/claude-sonnet-4
OCR_MODEL=openai/gpt-4o
SEARCH_MODEL=openai/gpt-4o-search-preview