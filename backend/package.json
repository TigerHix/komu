{
  "name": "komu-backend",
  "version": "1.0.0",
  "description": "Backend for komu app",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist",
