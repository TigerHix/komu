    "@prisma/client": "^6.8.2",
    "@types/gm": "^1.25.4",
    "dotenv": "^16.3.1",
    "elysia": "^0.8.14",
    "gm": "^1.25.1",
    "node-poppler": "^8.0.1",
    "openai": "^4.20.1",
    "pdf2pic": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bun-types": "^1.0.0",
    "eslint": "^8.54.0",
    "prisma": "^6.8.2",
    "typescript": "^5.3.2"
  }
